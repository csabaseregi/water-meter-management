modules = ["nodejs-20", "web"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "node index.js"]

[workflows]
runButton = "Start Full Stack App"

[[workflows.workflow]]
name = "Start Full Stack App"
author = 45834395
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev -- --host 0.0.0.0 --port 5000"

[[ports]]
localPort = 5000
externalPort = 80
